[Unit]
Description=Vault Auto Unseal Service
After=network.target
After=vault.service

[Service]
User=root
Group=root
Environment="VAULT_ADDR=https://127.0.0.1:8200"
Environment="VAULT_SKIP_VERIFY=true"
ExecStart=/scripts/unseal.sh
Type=oneshot
RemainAfterExit=no

[Install]
WantedBy=multi-user.target